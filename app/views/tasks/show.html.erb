<h1><%= @task.title %></h1>
<p><%= link_to "Edit this task", edit_task_path(@task)%></p>
<p><%= link_to 'delete this task',
              task_path(@task),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></p>

<p class="details"><%= @task.details %></p>
<% if @task.completed %>
  <p>This task is completed</p>
<% else %>
  <p>This task is NOT yet completed</p>
<% end %>
<p><%= link_to "Back to list", tasks_path %></p>
